        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="in.appsplanet.wedsource.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.appsplanet.wedsource.LoginActivity"
            android:launchMode="singleTask" />

        <!-- HomeActivity -->
        <activity
            android:name="in.appsplanet.wedsource.HomeActivity"
            android:launchMode="singleTask" />

        <!-- SettingsActivity -->
        <activity android:name="in.appsplanet.wedsource.SettingsActivity" />

        <!-- VendorDirectoryActivity -->
        <activity android:name="in.appsplanet.wedsource.vender.VendorDirectoryActivity" />

        <!-- EventActivity -->
        <activity android:name="in.appsplanet.wedsource.event.EventActivity" />

        <!-- NotesActivity -->
        <activity android:name="in.appsplanet.wedsource.note.NotesActivity" />

        <!-- SongsActivity -->
        <activity android:name="in.appsplanet.wedsource.songs.SongsActivity" />

        <!-- CalendarActivity -->
        <activity android:name="in.appsplanet.wedsource.calendar.CalendarActivity" />

        <!-- FinanceActivity -->
        <activity android:name="in.appsplanet.wedsource.finance.FinanceActivity" />

        <!-- PromotionsActivity -->
        <activity android:name="in.appsplanet.wedsource.PromotionsActivity" />

        <!-- AboutUsActivity -->
        <activity android:name="in.appsplanet.wedsource.AboutUsActivity" />

        <!-- ContactUsActivity -->
        <activity android:name="in.appsplanet.wedsource.ContactUsActivity" />

        <!-- SummaryActivity -->
        <activity android:name="in.appsplanet.wedsource.SummaryActivity" />
    </application>

</manifest>